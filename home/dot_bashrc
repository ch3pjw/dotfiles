# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi


# Aliases for fat fingers and convenience:
alias lks='ls'
alias lsd='ls'
alias las='ls'
alias ks='ls'
alias l='ls'
alias s='ls'
alias la='ls -a'
alias ll='ls -l'
alias kess='less'
alias cim='vim'
alias bim='vim'

alias pgrep='pgrep -l'
alias ggrep='git grep -n'
alias view='vim -R'
function mytop {
    if which htop; then
        htop
    else
        `which top` # Musn't recurse! We will do if we define an alias to top
    fi 
}
alias top='mytop'
if which aptitude > /dev/null; then
    alias install='sudo aptitude install'
else
    alias install='sudo yum install'
fi

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# Program environment variables
export WORKON_HOME=$HOME/.virtualenvs
vew=/usr/bin/virtualenvwrapper.sh
if [[ -e $vew ]]; then
    source /usr/bin/virtualenvwrapper.sh
fi

# Enable 256 colours in tmux (needs to be accompanied by
#   set -g default-terminal "screen-256color"
# in ~/.tmux.conf
alias tmux='TERM=xterm-256color tmux'

# Convenience function for moving to parent directory :-)
function .. (){
    local arg=${1:-1}
    local dir=""
    while [ $arg -gt 0 ]; do
        dir="../$dir"
        arg=$(($arg - 1))
    done
    cd $dir >&/dev/null
}

# Convenience bindings to search history
bind '"\e[A": history-search-backward'
bind '"\e[B": history-search-forward'

# Customise my bash prompt:
if [ -e "$HOME/.prompt_command" ]; then
    source $HOME/.prompt_command
    PROMPT_COMMAND=prompt_command
else
    echo "Couldn't find custom .prompt_command file, so using default prompt :-("
fi

export PATH=~/bin/:$PATH
export EDITOR=vim


